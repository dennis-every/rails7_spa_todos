<section id='posts-section' class='mt-3'>
  
  <header>
    <h1>Posts</h1>
  </header>

  <main class='table'>
    <header class='table-head row'>
      <div class='col'>#</div>
      <div class='col'>Post</div>
      <div class='col'>#</div>
    </header>
    <div class='table-body row'>
      <div id='new-post'>
        <%= render partial: 'posts/form', locals: { post: Post.new } %>
      </div>
      <div id='posts'>
        <%= render @posts %>      
      </div>
    </div>
  </main>

</section>
